<script src="/public/js/template.js"></script>
<script>
    (function () {


        var projectName = $("input[name=projectName]").val();
        var pageName = $("input[name=pageName]").val();
        $("#edit-work").draggable();

        $.ajax({
            url: "/editContent",
            type: "post",
            data: {
                projectName: projectName,
                pageName: pageName
            },
            success: function (res) {
                if (res.status == 200) {
                    var keywords = $(res.data).siblings("meta[name=keywords]").attr("content");
                    var description = $(res.data).siblings("meta[name=description]").attr("content");
                    $("#work-body").html(res.data.match(/<body>[\S\s]*?<\/body>/) || "");
                    $("#sortable").sortable({
                        placeholder: "ui-state-highlight",
                        revert: true
                    });
                    $("input[name=keywords]").val(keywords);
                    $("input[name=description]").val(description);
                }
            }
        })

        $.saveContent = function () {
            var projectName = $("input[name=projectName]").val();
            var pageName = $("input[name=pageName]").val();
            var keywords = $("input[name=keywords]").val();
            var description = $("input[name=description]").val();
            var content = $("#work-body").html();
            $.ajax({
                url: "/saveContent",
                type: "post",
                data: {
                    projectName: projectName,
                    pageName: pageName,
                    keywords: keywords,
                    description: description,
                    content: content
                },
                success: function (res) {
                    if (res.status == 200) {
                        window.location.href = "/";
                    }
                }
            })
        }
        $.addBaner = function (type) {
            $("#sortable").append($.template[type]);
        }
        $.editBanner = function (obj) {
            $.curEditObj = obj;
            $("#edit-modal").click();
        }
        $.deleteBanner = function (obj) {
            $.curEditObj = obj;
            $($.curEditObj._t).parents(".swiper-slide").remove();
        }
        //删除整块组件
        $.deleteKo = function (obj) {
            $.curEditObj = obj;
            $($.curEditObj._t).parents(".ko-box").remove();
        }
        $.uploadImg = function () {
            var projectName = $("input[name=projectName]").val();
            var pageName = $("input[name=pageName]").val();
            var data = new FormData();
            var file = $("#exampleInputFile")[0]["files"][0];
            data.append("file", file);
            data.append("projectName", projectName);
            data.append("pageName", pageName);
            $.ajax({
                url: "/upload",
                type: "POST",
                contentType: false,
                processData: false,
                cache: false,
                dataType: "json",
                data: data,
                success: function (res) {
                    if (res.status == 200) {
                        var url = res.copyPath;
                        url = url.split("font")[1];
                        $($.curEditObj._t).parents(".swiper-slide").find("img").attr("src", url);
                        $("#close-myModal").click();
                    }
                }
            })
        }

    })()
</script>

